<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="right">
    <TextView
        android:id="@+id/sender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="wawakaka72@gmail.com"
        android:layout_gravity="right"
        style="@style/textSender"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/you"
        android:layout_gravity="right"
        style="@style/msgMargin">
        <TextView
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/me"
            style="@style/textStyle"
            android:text="mindblown"
            android:layout_gravity="right"/>
        <LinearLayout
            android:id="@+id/linkPreviews"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/preview_bg"
            style="@style/previewStyle">

            <TextView
                android:id="@+id/webTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="www.google.com" />
            <TextView
                android:id="@+id/webDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="google.com lorem ipsum donor
dsifjkdshfjkdshfjkhdsjkfhjkdshfjkhdsjkfhjkdshfjkds
kjfhkjsdhfjkhdskjfhkjdshfjkdhskjfhdsjkhfsdkjhf"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/textStyleSmall"
        android:text="14:00"
        android:layout_gravity="right"/>
</LinearLayout>
